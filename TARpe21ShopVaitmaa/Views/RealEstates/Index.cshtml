@model IEnumerable<TARpe21ShopVaitmaa.Models.RealEstate.RealEstateIndexViewModel>
@{
    int rowNumber = 1;
}
<div class="h1">Estates</div>
<div>
    <a asp-action="Create" asp-controller="realEstates" type="submit" class="btn btn-primary">Create</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Location</th>
                <th scope="col">Country</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th scope="col">Sale Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var realEstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@realEstate.Address, @realEstate.City</td>
                    <td>@realEstate.Country</td>
                    <td>@realEstate.SquareMeters</td>
                    <td>@realEstate.Price</td>
                    <td>
                        @if (realEstate.IsPropertySold)
                        {
                            @("SOLD!!!")
                        }
                        else
                        {
                            @("Available")
                        }
                    </td>
                    <td>
                        <a asp-action="details" asp-controller="realEstates" asp-route-id="@realEstate.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="realEstates" asp-route-id="@realEstate.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="realEstates" asp-route-id="@realEstate.Id" type="submit" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>